{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "Host=cicdtemplate-db;Port=5432;Database=cicdtemplatedb;Username=postgres;Password=postgres;",
    "Cache": "redis:6379"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "OpenTelemetry",
        "Args": {
          "ResourceAttributes": {
            "deployment.environment": "Development",
            "logger.type": "Serilog"
          }
        }
      }
    ]
  }
}
